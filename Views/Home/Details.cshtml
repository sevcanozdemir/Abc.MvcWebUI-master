@using Abc.MvcWebUI.Entity;
@model Product
@{
    ViewBag.Title = "Details";
}
<div id="product-details" class="container pb-5">

    <div class="row">

        <div class="col-md-6">
            <img src="/Upload/@Model.Image" class="img-fluid rounded">
        </div>
        <div class="col-md-6">
            <div class="row mt-1">
                <div class="col-md-12">

                    <h1>@Model.Name</h1>

                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    @if (Model.IsApproved)
                    {
                        <span class=" badge badge-primary"> STOKTA</span>
                    }
                    else
                    {
                        <span class="badge badge-primary">STOKTA YOK</span>

                    }


                    <span class="product-number"> #2354648 </span>

                </div>
            </div>
            <div class="row mt-1">
                <div class="col-md-12">
                    <div id="description">
                        @Model.Description



                    </div>




                </div>



            </div>
            <div class="row mt-1">
                <div class="col-md-4">

                    <i class="fa fa-star" aria-hidden="true"></i>
                    <i class="fa fa-star" aria-hidden="true"></i>
                    <i class="fa fa-star" aria-hidden="true"></i>
                    <i class="fa fa-star" aria-hidden="true"></i>
                    <i class="fa fa-star-half-o" aria-hidden="true"></i>
                    <span class="badge badge-success">56</span>





                </div>
                

            </div>
            <div class="row mt-1">
                <div class="col-md-12">

                    <h4 id="product-price">@Model.Price TL</h4>


                </div>
            </div>
            <div class="row">
                <div class="col-md-12">

                    @using (Html.BeginForm("AddToCart", "Cart"))
                    {
                        @Html.HiddenFor(i => i.Id)
                        <button type="submit" class="btn btn-success">
                            <i class="fa fa-cart-arrow-down" aria-hidden="true"></i>
                            Sepete Ekle
                        </button>
                    }



                </div>
            </div>

        </div>
    </div>
    
</div>
