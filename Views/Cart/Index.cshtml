@model Abc.MvcWebUI.Models.Cart
@{
    ViewBag.Title = "Index";
}


<div class="container pb-5">

    <div class="row">

        <div class="col-md-6">

            <h2>Alışveriş Sepeti</h2>
            <hr />
            @if (Model.CartLines.Count > 0)
            {
                <table class="table table-bordered ">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Adet</th>
                            <th>ürün</th>
                            <th>Fiyat</th>
                            <th>Toplam Fiyat</th>
                            <td></td>


                        </tr>


                    </thead>
                    <tbody>
                        @foreach (var item in Model.CartLines)
                        {
                            <tr>
                                <td>
                                    <img src="~/Upload/@item.Product.Image" width="50" />
                                </td>
                                <td>
                                    @item.Quantity
                                </td>
                                <td>
                                    @item.Product.Price
                                </td>
                                <td>
                                    @((item.Product.Price * item.Quantity).ToString("c"))
                                </td>
                                <td>
                                    @using (Html.BeginForm("RemoveFromCart", "Cart"))
                                    {
                                        @Html.Hidden("Id", item.Product.Id)
                                        <button type="submit" class="btn btn-danger">
                                            <i class="far fa-trash-alt" style="font-size: 28px;"></i>
                                            SİL
                                        </button>
                                    }
                                </td>

                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="5"></td>
                            <td>
                                @Model.Total().ToString("c")
                            </td>
                        </tr>


                    </tfoot>
                </table>
                <div class="text-center">
                    <a href="/Home/List" class="btn btn-primary"> Alışverişe Devam Et</a>
                    <a href="/Cart/Checkout" class="btn btn-primary">Alışverişi Tamamla</a>
                </div>
            }
            else
            {
                <div class="alert alert-warning" role="alert">
                    <i class="fas fa-exclamation-circle" style="font-size: 48px;"></i>
                    Alışveriş Sepetinizde Ürün Bulunmamaktadır!
                </div>
            }






        </div>
    </div>
</div>
